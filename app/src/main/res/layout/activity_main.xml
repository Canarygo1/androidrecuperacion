<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".data.ui.main.MainActivity">


  <Spinner
    android:id="@+id/eyes"
    android:layout_width="346dp"
    android:layout_height="30dp"
    android:layout_marginBottom="36dp"
    app:layout_constraintBottom_toTopOf="@+id/nose"
    app:layout_constraintEnd_toEndOf="@+id/name"
    app:layout_constraintHorizontal_bias="0.6"
    app:layout_constraintStart_toStartOf="@+id/name" />

  <Spinner
    android:id="@+id/nose"
    android:layout_width="346dp"
    android:layout_height="36dp"
    android:layout_marginBottom="20dp"
    app:layout_constraintBottom_toTopOf="@+id/mouth"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.022"
    app:layout_constraintStart_toStartOf="@+id/eyes" />

  <Spinner
    android:id="@+id/mouth"
    android:layout_width="345dp"
    android:layout_height="41dp"
    android:layout_marginBottom="32dp"
    app:layout_constraintBottom_toTopOf="@+id/avatarImage"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent" />

  <ImageView
    android:id="@+id/avatarImage"
    android:layout_width="178dp"
    android:layout_height="174dp"
    android:layout_marginBottom="16dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.497"
    app:layout_constraintStart_toStartOf="parent"
    tools:src="@tools:sample/avatars" />

  <com.google.android.material.textfield.TextInputEditText
    android:id="@+id/username"
    android:layout_width="343dp"
    android:layout_height="46dp"
    android:hint="Username"
    app:layout_constraintBottom_toTopOf="@+id/name"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.514"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.891" />

  <com.google.android.material.textfield.TextInputEditText
    android:id="@+id/name"
    android:layout_width="341dp"
    android:layout_height="53dp"
    android:layout_marginBottom="20dp"
    android:hint="name"
    app:layout_constraintBottom_toTopOf="@+id/eyes"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.057"
    app:layout_constraintStart_toStartOf="@+id/username" />

</androidx.constraintlayout.widget.ConstraintLayout>
